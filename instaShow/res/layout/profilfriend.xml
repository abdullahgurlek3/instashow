            <Button
                android:id="@+id/friendFanButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/AppBaseThemeButton"
                android:text="@string/friendFans" />
        </LinearLayout>

        <LinearLayout
            style="@style/AppBaseThemeColumn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/friendFollowedButtonWithme"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/AppBaseThemeButton"
                android:text="@string/friendFollowedWithMe" />
        </LinearLayout>

        <LinearLayout
            style="@style/AppBaseThemeColumn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/friendNonFollowerButtonWithMe"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
